{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2022
	},
	"rules": {
		"arrow-spacing": [
			"warn",
			{
				"before": true,
				"after": true
			}
		],
		"brace-style": [
			"warn",
			"1tbs",
			{
				"allowSingleLine": true
			}
		],
		"comma-dangle": [
			"warn",
			"always-multiline"
		],
		"comma-spacing": "warn",
		"comma-style": "warn",
		"dot-location": [
			"warn",
			"property"
		],
		"handle-callback-err": "off",
		"indent": [
			"warn",
			4
		],
		"keyword-spacing": "warn",
		"linebreak-style": [
			"warn",
			"windows"
		],
		"max-nested-callbacks": [
			"warn",
			{
				"max": 6
			}
		],
		"max-statements-per-line": [
			"warn",
			{
				"max": 2
			}
		],
		"no-console": "off",
		"no-empty-function": "off",
		"no-floating-decimal": "warn",
		"no-inline-comments": "off",
		"no-lonely-if": "warn",
		"no-multi-spaces": "warn",
		"no-multiple-empty-lines": [
			"warn",
			{
				"max": 2,
				"maxEOF": 1,
				"maxBOF": 0
			}
		],
		"no-shadow": [
			"warn",
			{
				"allow": [
					"err",
					"resolve",
					"reject"
				]
			}
		],
		"no-unused-vars": "off",
		"no-trailing-spaces": [
			"warn"
		],
		"no-var": "off",
		"object-curly-spacing": [
			"warn",
			"always"
		],
		"prefer-const": "off",
		"quotes": [
			"warn",
			"single"
		],
		"semi": [
			"warn",
			"always"
		],
		"space-before-blocks": "warn",
		"space-before-function-paren": [
			"warn",
			{
				"anonymous": "never",
				"named": "never",
				"asyncArrow": "always"
			}
		],
		"space-in-parens": "warn",
		"space-infix-ops": "warn",
		"space-unary-ops": "warn",
		"spaced-comment": "warn",
		"yoda": "warn"
	}
}